{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.33/schema.json",
    "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
    "border": true,
    "border_width": 3,
    "cross_monitor_move_behaviour": "Insert",
    "default_container_padding": 3,
    "default_workspace_padding": 3,
    "ignore_rules": [
        {
            "id": "MozillaDialogClass",
            "kind": "Class",
            "matching_strategy": "Equals"
        },
        {
            "id": "noita.exe",
            "kind": "Exe",
            "matching_strategy": "Equals"
        },
        {
            "id": "GLFW30",
            "kind": "Class",
            "matching_strategy": "Equals"
        },
        [
            {
                "kind": "Exe",
                "id": "obs64.exe",
                "matching_strategy": "Equals"
            },
            {
                "kind": "Title",
                "id": "OBS ",
                "matching_strategy": "DoesNotStartWith"
            }
        ]
    ],
    "monitors": [
        {
            "workspaces": [
                {
                    "layout": "BSP",
                    "name": "I"
                }
            ]
        }
    ],
    "mouse_follows_focus": false,
    "tray_and_multi_window_applications": [
        {
            "id": "OpenVPN Connection (",
            "kind": "Title",
            "matching_strategy": "StartsWith"
        }
    ]
}
